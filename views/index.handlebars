<div class="container">

	<div class="row">

		<div class="col-md-12">
            <div style="width:20%;height:20%;padding-left:35%"><iframe src="https://giphy.com/embed/l0K4lPx8bvdbFMdGM" frameBorder="0" class="giphy-embed" allowFullScreen></iframe></div><p><a href="https://giphy.com/gifs/cute-kawaii-burger-l0K4lPx8bvdbFMdGM"></a></p>
		</div>

	</div>

	<div class="row">

		<div class="col-md-12">
			<h1 class="text-center">Eat-Da-Burger</h1>
		</div>
	
	</div>

	<div class="row">

		<div class="col-md-5">
			<h3>GET IN MY BELLY</h3>
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							<h5>{{this.id}}. {{this.burger_name}}
								<form action='burgers/updateOne/{{this.id}}?_method=PUT' method='POST'>
									<input type='hidden' name='devoured' value='true'>
									<button type='submit' class="btn btn-default">EAT THIS!</button>
								</form>
							</h5>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-md-2"></div>

		<div class="col-md-5">
			<h3 class="text-muted">DEVOURED</h3>
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							<h5 class="text-muted">{{this.id}}. {{this.burger_name}}</h5>
						</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>

	</div>

	<br><br>

	<div class="row">

		<div class="col-md-12 text-center">
			<form class="create-update-form" action="burgers/insertOne" method="POST">
				<div class="form-group">
					<textarea type="text" name="name"></textarea><br>
					<button class="btn btn-default" type="submit">Submit</button>
					<h5 class="text-center">Enter a burger you'd like to eat and click Submit!</h5>
				</div>
			</form>
		</div>

	</div>

</div>